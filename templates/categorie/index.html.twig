{% extends 'admin.base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Liste des Catégories</h1>
    <a class="btn btn-success" href="{{ path('article_new') }}">
        Créer un article&nbsp;&nbsp;<i class="fas fa-plus"></i>
    </a>
    <br>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Libelle</th>
                <th>Nb Articles</th>
                <th>Couleur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.libelle }}</td>
                <td>{{ categorie.articles|length }}</td>
                <td class="bg-{{ categorie.couleur }} border border-dark"></td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('categorie_show', {'id': categorie.id}) }}">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="btn btn-secondary" href="{{ path('categorie_edit', {'id': categorie.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
