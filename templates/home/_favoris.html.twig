<div class="row mb-2">
    {% for fav in favoris|sort((a, b) => b.creation <=> a.creation) %}
        <div class="col-md-6 bloc-article">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-{{ fav.categorie.couleur }}">{{ fav.categorie.libelle }}</strong>
                    <h3 class="mb-0">
                        <a class="text-dark" href="{{ path('article_show', {'id': fav.id}) }}">{{ fav.titre }}</a>
                    </h3>
                    <div class="mb-1 text-muted">{{ fav.creation|date('d M y') }}</div>
                    <p class="card-text mb-auto">{{ fav.contenu|slice(0, 200)}}...</p>
                    <a class="text-dark font-weight-bold" href="{{ path('article_show', {'id': fav.id}) }}">
                        Lire plus&nbsp;<i class="fas fa-angle-right"></i>
                    </a>
                    <span class="remove-favori fas fa-heart" article-id="{{ fav.id }}"
                        title="Supprimer le favori"></span>
                </div>
                <img class="card-img-right flex-auto d-none d-md-block" src="https://image.tmdb.org/t/p/w200/iUp85s5s7eaPbuCUNqOCeJCEVpY.jpg" alt="Card image cap">
            </div>
        </div>
    {% endfor %}
</div>