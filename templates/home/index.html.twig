{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-4 font-italic">{{ randomArticle.titre }}</h1>
            <p class="lead my-3">{{ randomArticle.contenu|slice(0, 200)}}...</p>
            <p class="lead mb-0"><a href="{{ path('article_show', {'id': randomArticle.id}) }}" class="text-white font-weight-bold">Lire plus ...</a></p>
        </div>
    </div>
    <div class="row mb-2">
        {% for article in articles|sort((a, b) => b.creation <=> a.creation) %}
            <div class="col-md-6 bloc-article">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <strong class="d-inline-block mb-2 text-{{ article.categorie.couleur }}">{{ article.categorie.libelle }}</strong>
                        <h3 class="mb-0">
                            <a class="text-dark" href="#">{{ article.titre }}</a>
                        </h3>
                        <div class="mb-1 text-muted">{{ article.creation|date('d M y') }}</div>
                        <p class="card-text mb-auto">{{ article.contenu|slice(0, 200)}}...</p>
                        <a href="{{ path('article_show', {'id': article.id}) }}">Lire plus</a>
                        {% if app.user %}
                            <span class="far fa-heart add-favorite"></span>
                        {% endif %}
                    </div>
                    <img class="card-img-right flex-auto d-none d-md-block" src="https://image.tmdb.org/t/p/w200/iUp85s5s7eaPbuCUNqOCeJCEVpY.jpg" alt="Card image cap">
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
