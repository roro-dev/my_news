{% extends 'admin.base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des Utilisateurs</h1>
    <a class="btn btn-success" href="{{ path('user_new') }}">
        Ajouter un utilisateur&nbsp;&nbsp;<i class="fas fa-plus"></i>
    </a>
    <br>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Roles</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.getRolesList }}</td>
                <td width="10%" align="center">
                    <a class="btn btn-outline-info" href="{{ path('user_edit', {'id': user.id}) }}"
                        title="Modifier l'utilisateur">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun utilisateur</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
